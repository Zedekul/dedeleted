{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": "./src",
    "target": "es2020",
    "noImplicitAny": true,
    "module": "es2020",
    "moduleResolution": "NodeNext",
    "outDir": "./lib",
    "strict": true,
    "baseUrl": ".",
    "typeRoots": ["./typings", "node_modules/@types"],
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": ["./src"]
}
